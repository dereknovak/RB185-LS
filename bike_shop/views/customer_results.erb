<% if @customers.empty? %>
  <p>No customer information found.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Member Number</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Email Address</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <a href='/customers/<%= customer['id'] %>'>
              <%= customer['id'] %>
            </a>
          </td>
          <td><%= customer['first_name'] %></td>
          <td><%= customer['last_name'] %></td>
          <td><%= customer['phone_number'] %></td>
          <td><%= customer['email_address'] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>